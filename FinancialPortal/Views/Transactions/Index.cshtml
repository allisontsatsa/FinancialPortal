@model IEnumerable<FinancialPortal.Models.Transaction>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="col">
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Bank Account
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Memo
                    </th>
                    <th>
                        Member Name
                    </th>
                    <th>
                        Transaction Type
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Date/Time
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderByDescending(d => d.Created))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BankAccount.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryItem.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Memo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Owner.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransactionType.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>